@page
@model DevilDaggersWebsite.Razor.Pages.Leaderboard.PlayerSettingsModel
@using DevilDaggersWebsite.Razor.Utils
@{
	ViewData["Title"] = $"Player Settings";
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<main role="main">
	@if (Model.Entries == null)
	{
		<p>Failed to retrieve scores from the official Devil Daggers leaderboard servers. Please try again later.</p>
		<p>If the problem persists, try contacting the Devil Daggers developer.</p>
	}
	else
	{
		@await Html.PartialAsync("Partials/LeaderboardTableInfoPartial")
		<p>If you'd like to add or change your settings, let us know on <a href="@RazorUtils.DiscordUrl">Discord</a>.</p>
	}

	@await Html.PartialAsync("Partials/LeaderboardUserSettingsPartial")
</main>

@section Scripts {
	<script defer src='~/scripts/leaderboard-user-settings.js' asp-append-version='true'></script>
}

@section Styles {
	<link rel='stylesheet' href='~/styles/leaderboard.css' asp-append-version="true" />
	<link rel='stylesheet' href='~/styles/leaderboard-rows-user-settings.css' asp-append-version="true" />
}
