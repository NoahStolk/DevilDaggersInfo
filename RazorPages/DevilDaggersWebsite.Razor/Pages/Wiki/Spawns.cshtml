@page
@model SpawnsModel
@using DevilDaggersWebsite.Razor.Models
@using DevilDaggersWebsite.Razor.Utils
@{
	ViewData["Title"] = "Spawns";
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<main role="main">
	<form method="get">
		<select class="select form-control select-small" asp-for="GameVersion" asp-items="Model.GameVersionListItems" onchange="this.form.submit()"></select>
	</form>

	<p>
		These are all the spawn times for Devil Daggers @Model.GameVersion.
	</p>
	<p>
		@RazorUtils.GetLayout($"Note that {Model.EmergeEnemies} emerge around 3 seconds later than their actual spawn time.", Model.GameVersion)
	</p>

	@await Html.PartialAsync("Partials/SpawnsPartial", new SpawnsPartialModel(Model.SpawnsetPath, true))
</main>

@section Styles {
	<link rel='stylesheet' href='~/styles/spawnset.css' asp-append-version="true" />
}
