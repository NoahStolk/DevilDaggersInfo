@page "/admin/cache"
@inherits BaseAdminPage
@using DevilDaggersInfo.Web.BlazorWasm.Client.Components.Admin
@using DevilDaggersInfo.Web.BlazorWasm.Shared.Dto.Admin.CustomEntries
@using DevilDaggersInfo.Web.BlazorWasm.Shared.Enums.Sortings.Admin

<Heading Title="Admin - Cache" />

<ul>
	@foreach (string cacheType in new[] { "LeaderboardHistory", "LeaderboardStatistics", "ModArchive", "SpawnsetHash", "SpawnsetSummary" })
	{
		<li><button class="btn btn-gray px-2 py-1" @onclick="@(async () => await Http.ClearCache(cacheType))">Clear @cacheType cache</button></li>
	}
</ul>
