@page "/admin/mods/edit/{Id:int}"
@inherits BaseAdminModPage
@using DevilDaggersInfo.Core.Mod.Utils
@using DevilDaggersInfo.Web.BlazorWasm.Client.Components.Admin
@using DevilDaggersInfo.Web.BlazorWasm.Client.Components.Input
@using DevilDaggersInfo.Web.BlazorWasm.Shared.Dto.Admin.Mods
@using DevilDaggersInfo.Web.BlazorWasm.Shared.Dto.Admin.Players
@using DevilDaggersInfo.Web.BlazorWasm.Shared.Enums

<AdminEdit Name="Mod" OverviewUrl="/admin/mods" ApiCall="Http.EditModById" Model="_editMod" Id="Id" @ref="_editComponent">
	<AdminInput Label="Name"><InputText class="w-64 pl-2 bg-gray-1 text-color-text" @bind-Value="@_editMod.Name" /></AdminInput>
	<AdminInput Label="Author(s)"><MultiSearchDropdown Values="@_playerNames" @bind-Value="@_editMod.PlayerIds" /></AdminInput>
	<AdminInput Label="Trailer URL"><InputText class="w-64 pl-2 bg-gray-1 text-color-text" @bind-Value="_editMod.TrailerUrl" /></AdminInput>
	<AdminInput Label="HTML description"><InputTextArea class="w-64 h-64 pl-2 bg-gray-1 text-color-text" @bind-Value="@_editMod.HtmlDescription" /></AdminInput>
	<AdminInput Label="Mod types (only for non-hosted)"><MultiSearchDropdown Values="@ModTypes" @bind-Value="@_editMod.ModTypes" /></AdminInput>
	<AdminInput Label="URL (only for non-hosted)"><InputText class="w-64 pl-2 bg-gray-1 text-color-text" @bind-Value="@_editMod.Url" /></AdminInput>
	<AdminInput Label="Hidden"><InputCheckbox @bind-Value="@_editMod.IsHidden" /></AdminInput>
	<AdminInput Label="Binaries to delete"><MultiSelectList Values="@_binaryNames" OnToggleAction="StateHasChanged" @bind-Value="@_editMod.BinariesToDelete" /></AdminInput>
	<AdminInput Label="Binaries"><InputFile @onclick="() => _editMod.Binaries.Clear()" OnChange="LoadBinaries" multiple /></AdminInput>
	<AdminInput Label="Screenshots to delete"><MultiSelectList Values="@_screenshotNames" OnToggleAction="StateHasChanged" @bind-Value="@_editMod.ScreenshotsToDelete" /></AdminInput>
	<AdminInput Label="Screenshots"><InputFile @onclick="() => _editMod.Screenshots.Clear()" OnChange="LoadScreenshots" multiple /></AdminInput>
</AdminEdit>

@if (_editMod.BinariesToDelete.Count > 0)
{
	<p class="text-red">Binaries to delete</p>
	<ul class="pl-4">
		@foreach (string binaryName in _editMod.BinariesToDelete)
		{
			<li class="list-disc">@binaryName</li>
		}
	</ul>
}
@if (_editMod.Binaries.Count > 0 || _binaryFileSizeErrors.Count > 0)
{
	<p class="text-red">Binaries to upload</p>
	<ul class="pl-4">
		@foreach (string binaryName in _editMod.Binaries.Select(kvp => kvp.Key))
		{
			<li class="list-disc">@binaryName (will be renamed to @(BinaryFileNameUtils.SanitizeModBinaryFileName(binaryName, _editMod.Name ?? string.Empty)))</li>
		}
		@foreach (string fileSizeError in _binaryFileSizeErrors)
		{
			<li class="list-disc text-red">@fileSizeError</li>
		}
	</ul>
}
@if (_editMod.ScreenshotsToDelete.Count > 0)
{
	<p class="text-red">Screenshots to delete</p>
	<ul class="pl-4">
		@foreach (string screenshot in _editMod.ScreenshotsToDelete)
		{
			<li class="list-disc">@screenshot</li>
		}
	</ul>
}
@if (_editMod.Screenshots.Count > 0 || _screenshotFileSizeErrors.Count > 0)
{
	<p class="text-red">Screenshots to upload</p>
	<ul class="pl-4">
		@{
			foreach (string screenshot in _editMod.Screenshots.OrderBy(kvp => kvp.Key).Select(kvp => kvp.Key))
			{
				<li class="list-disc">@screenshot</li>
			}
			foreach (string fileSizeError in _screenshotFileSizeErrors)
			{
				<li class="list-disc text-red">@fileSizeError</li>
			}
		}
	</ul>
}
