@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject NavigationManager Navigation

<AuthorizeView>
	<Authorized>
		<NavItem Href="authentication/logout" CssClass="text-lg" IconType="account-logout" Text="Logout" />
	</Authorized>
	<NotAuthorized>
		<NavItem Href="authentication/register" CssClass="text-lg" IconType="key" Text="Register" />
		<NavItem Href="authentication/login" CssClass="text-lg" IconType="account-login" Text="Login" />
	</NotAuthorized>
</AuthorizeView>
