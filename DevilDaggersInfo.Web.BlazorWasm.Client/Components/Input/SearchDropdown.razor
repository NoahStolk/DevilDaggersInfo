@inherits InputBase<TKey>
@typeparam TKey

<OutsideClickHandler OnClickOutside="OnClickOutside" CssClass="inline-block w-64 bg-gray-1 text-color-text cursor-pointer">
	<div class="grid grid-cols-8">
		<span class="input-list-opener col-span-7" @onclick="e => _show = !_show">@SelectedDisplayValue</span>
		<span class="input-list-button" @onclick="e => HandleSelect(default)">âœ•</span>
	</div>
	<div class="@(_show ? "absolute" : "hidden") z-10">
		<div class="input-list-border">
			<div class="p-2 w-64">
				<span class="text-lg w-16">Search:</span>
				<InputTextImmediate @bind-Value="_searchValue" class="w-48 bg-gray-3 text-color-text" />
			</div>
			<ul class="max-h-screen-half w-64 overflow-y-scroll">
				@{
					foreach (KeyValuePair<TKey, string> kvp in FilteredItems)
					{
						<li class="input-list-entry" @onclick="e => HandleSelect(kvp.Key)">@DisplayValue(kvp.Key)</li>
					}
				}
			</ul>
		</div>
	</div>
</OutsideClickHandler>
