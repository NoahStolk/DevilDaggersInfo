<div class="grid gap-2 grid-cols-@(Left + Right) px-1 @((PreventHeightOverflow ? "max-h-6" : string.Empty)) @CssClass">
	<span class="col-span-@(Left)">@Name</span>
	<span class="col-span-@(Right) text-right">
		@if (!PreventHeightOverflow)
		{
			<div class="max-h-48 overflow-y-auto">
				@ChildContent
			</div>
		}
		else
		{
			@ChildContent
		}
	</span>
</div>

@code {
	[Parameter, EditorRequired] public string Name { get; set; } = null!;
	[Parameter, EditorRequired] public RenderFragment ChildContent { get; set; } = null!;
	
	[Parameter] public int Left { get; set; } = 1;
	[Parameter] public int Right { get; set; } = 1;

	[Parameter] public string? CssClass { get; set; }
	[Parameter] public bool PreventHeightOverflow { get; set; } = true;
}
