<span class="oi oi-@Type pr-1 w-6 text-center" aria-hidden="true"></span> <span class="transition-opacity duration-150 ease-in-out @GetOpacityClass()">@Text</span>

@code {
	[CascadingParameter] NavMenu NavMenu { get; set; } = null!;

	[Parameter, EditorRequired] public string Type { get; set; } = null!;
	[Parameter, EditorRequired] public string Text { get; set; } = null!;

	private string? GetOpacityClass()
	{
		if (NavMenu.ExpandNavMenu)
			return "opacity-100";

		if (NavMenu.ShowNavMenuMobile)
			return $"opacity-100 sm:opacity-0";

		return "opacity-0";
	}
}
