@using DevilDaggersInfo.Web.BlazorWasm.Shared.Dto.Public.Tools

<div class="grid gap-3 grid-cols-2">
	<div>Current version</div>
	<div>@GetTool.VersionNumber</div>

	<div>Oldest supported version</div>
	<div>@GetTool.VersionNumberRequired</div>
	
	<div>File size</div>
	<div>@GetTool.FileSize</div>
	
	<div>Downloads (current version)</div>
	<div>@GetTool.DownloadCount</div>
	
	<div>Supported operating systems</div>
	<div>@string.Join(", ", GetTool.SupportedOperatingSystems)</div>

	<button class="bg-gray-900 hover:bg-gray-700 transition-colors duration-100 w-24 h-8 py-1 rounded text-color-text" href="/api/tools/@GetTool.Name/file">Download</button>
</div>

@code
{
	[Parameter, EditorRequired] public GetTool GetTool { get; set; } = null!;
}
