<Window x:Class="DevilDaggersInfo.AssetEditor.Uno.WPF.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevilDaggersInfo.AssetEditor.Uno.WPF.Host"
		xmlns:shared="clr-namespace:DevilDaggersInfo.Razor.Core.AssetEditor;assembly=DevilDaggersInfo.Razor.Core.AssetEditor"
		xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<ContentControl x:Name="root">
		<Grid Background="Black">
			<blazor:BlazorWebView HostPage="wwwroot\index.html" Services="{DynamicResource services}">
				<blazor:BlazorWebView.RootComponents>
					<blazor:RootComponent Selector="#app" ComponentType="{x:Type shared:App}" />
				</blazor:BlazorWebView.RootComponents>
			</blazor:BlazorWebView>
		</Grid>
	</ContentControl>
</Window>
