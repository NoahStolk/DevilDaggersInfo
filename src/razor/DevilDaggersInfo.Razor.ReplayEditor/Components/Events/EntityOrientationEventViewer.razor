@using DevilDaggersInfo.Core.Replay.Events
@using DevilDaggersInfo.Razor.ReplayEditor.Store.State
@using DevilDaggersInfo.Razor.ReplayEditor.Utils
@using Fluxor
@inject IState<ReplayBinaryState> ReplayBinaryState

<EventViewer Title="Entity Orientation" GridConfig="grid-cols-4">
	<Head>
		<span>Entity ID</span>
		<span>Orientation</span>
	</Head>
	<Body>
		<span>@MarkupUtils.EntityType(Event.EntityId, ReplayBinaryState.Value.ReplayBinary.EventsData.EntityTypes)</span>
		<span class="col-span-2">@Event.Orientation</span>
	</Body>
</EventViewer>

@code
{
	[Parameter]
	[EditorRequired]
	public EntityOrientationEvent Event { get; set; }
}
