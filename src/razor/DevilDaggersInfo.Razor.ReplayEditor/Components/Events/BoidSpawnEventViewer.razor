@using DevilDaggersInfo.Core.Replay.Events
@using DevilDaggersInfo.Razor.ReplayEditor.Store.State
@using DevilDaggersInfo.Razor.ReplayEditor.Utils
@using Fluxor
@inject IState<ReplayBinaryState> ReplayBinaryState

<EventViewer Title="Boid Spawn" GridConfig="grid-cols-4">
	<Head>
		<span>Entity ID</span>
		<span>Spawner Entity ID</span>
		<span>Position</span>
		<span>Speed</span>
	</Head>
	<Body>
		<span>@MarkupUtils.EntityType(Event.EntityId, ReplayBinaryState.Value.ReplayBinary.EntityTypes)</span>
		<span>@MarkupUtils.EntityType(Event.SpawnerEntityId, ReplayBinaryState.Value.ReplayBinary.EntityTypes)</span>
		<span>@Event.Position</span>
		<span>@Event.Speed.ToString("0.00")</span>
	</Body>
</EventViewer>

@code
{
	[Parameter]
	[EditorRequired]
	public BoidSpawnEvent Event { get; set; }
}
