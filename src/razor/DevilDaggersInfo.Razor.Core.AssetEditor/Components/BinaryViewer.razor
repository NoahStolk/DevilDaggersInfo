@using DevilDaggersInfo.Core.Asset
@using DevilDaggersInfo.Core.Mod

<button class="btn btn-gray w-32 pb-1" @onclick="NewBinary">New binary</button>
<button class="btn btn-gray w-32 pb-1" @onclick="OpenBinary">Open binary</button>
<button class="btn btn-gray w-32 pb-1" @onclick="ExtractBinary">Extract binary</button>
<button class="btn btn-gray w-32 pb-1" @onclick="CompileBinary">Compile binary</button>

@if (_binary == null)
{
	<div>No binary selected</div>
}
else
{
	<div class="grid gap-x-2 grid-cols-4">
		<div class="font-bold">Type</div>
		<div class="font-bold">Name</div>
		<div class="font-bold text-right">Size</div>
		<div></div>
		@foreach (ModBinaryChunk chunk in _binary.Chunks)
		{
			<div>@chunk.AssetType</div>
			<div>@chunk.Name</div>
			<div class="text-right">@chunk.Size.ToString("N0") bytes</div>
			<button class="btn btn-green" @onclick="() => ExtractAsset(chunk)">Extract</button>
		}
	</div>
}
