@page
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
@inject Core.Transients.ToolHelper toolHelper
@using DevilDaggersCore.Utils
@using DevilDaggersWebsite.Core.Dto
@using System.IO
@{
	Tool tool = toolHelper.GetToolByName("DevilDaggersSurvivalEditor");
	ViewData["Title"] = tool.DisplayName;
	string downloadFileName = $"{tool.Name}{tool.VersionNumber}.zip";
	FileInfo downloadFileInfo = new FileInfo(System.IO.Path.Combine(env.WebRootPath, "tools", tool.Name, downloadFileName));
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<main role="main">
	<p>
		Devil Daggers Survival Editor is a tool that lets you create, view, and edit spawnsets.
	</p>

	<p>
		<img class="img-responsive image-narrow" src="~/images/Tools/@(tool.Name).png" />
	</p>

	<p>
		Current version: @(tool.VersionNumber)<br />
		Oldest supported version: @(tool.VersionNumberRequired)<br />
		File size: @(Math.Round(downloadFileInfo.Length / 1024f).ToString()) KB<br />
		<a class="btn dont-break-out" href="/api/tools/@tool.Name/file">Download</a>
	</p>

	<h2>Main features</h2>
	<ul>
		<li>Spawnset editor</li>
		<li>Arena editor with the ability to change tile heights</li>
		<li>Arena presets</li>
		<li>Shrink preview that shows a rough approximation of what the arena will be like at what time during the spawnset</li>
		<li>Easily replacing the currently active spawnset in the game</li>
		<li>Downloading and importing spawnsets directly from the website</li>
	</ul>

	<h2>System requirements</h2>
	<ul>
		<li>Microsoft Windows</li>
		<li><a href="https://dotnet.microsoft.com/download/dotnet-core/3.1">.NET Core Desktop Runtime 3.1.x</a></li>
	</ul>

	<h2>Installation</h2>
	<ol>
		<li>Make sure to install <a href="https://dotnet.microsoft.com/download/dotnet-core/3.1">.NET Core Desktop Runtime 3.1.x</a>.</li>
		<li>Download the .zip file.</li>
		<li>Unzip its contents.</li>
		<li>Run the executable (.exe file) inside the folder.</li>
	</ol>

	<h2>Source code</h2>
	<p>
		The source code can be found on <a target="_blank" href="@UrlUtils.SourceCodeUrl(tool.Name)">GitHub</a>.
	</p>

	<h2>Changelog</h2>
	@tool.ToChangelogHtmlString()
</main>

@section Styles {
	<link rel='stylesheet' href='~/styles/tools.css' />
}