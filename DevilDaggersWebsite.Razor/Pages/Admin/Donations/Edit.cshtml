@page
@model DevilDaggersWebsite.Razor.Pages.Admin.Donations.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Donation</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Donation.Id" />
			<div class="form-group">
				<label asp-for="Donation.PlayerId" class="control-label"></label>
				<input asp-for="Donation.PlayerId" class="form-control" />
				<span asp-validation-for="Donation.PlayerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Donation.Amount" class="control-label"></label>
				<input asp-for="Donation.Amount" class="form-control" />
				<span asp-validation-for="Donation.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Donation.Currency" class="control-label"></label>
				<select asp-for="Donation.Currency" class="form-control" asp-items="Model.CurrencyList"></select>
				<span asp-validation-for="Donation.Currency" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Donation.ConvertedEuroCentsReceived" class="control-label"></label>
				<input asp-for="Donation.ConvertedEuroCentsReceived" class="form-control" />
				<span asp-validation-for="Donation.ConvertedEuroCentsReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Donation.DateReceived" class="control-label"></label>
				<input asp-for="Donation.DateReceived" class="form-control" />
				<span asp-validation-for="Donation.DateReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Donation.Note" class="control-label"></label>
				<input asp-for="Donation.Note" class="form-control" />
				<span asp-validation-for="Donation.Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="Donation.IsRefunded" /> @Html.DisplayNameFor(model => model.Donation.IsRefunded)
					</label>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}