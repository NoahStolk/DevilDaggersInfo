@page
@using DevilDaggersWebsite.Dto
@using DevilDaggersWebsite.Entities
@using DevilDaggersWebsite.Razor.PageModels
@model AdminEntityCreateOrEditPageModel<Donation, AdminDonation>

@{
	ViewData["Title"] = Model.IsEditing ? "Edit" : "Create";
}

<h1>@ViewData["Title"] Donation</h1>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="AdminDto.PlayerId" class="control-label"></label>
				<select asp-for="AdminDto.PlayerId" class="form-control" asp-items="Model.PlayerList"></select>
				<span asp-validation-for="AdminDto.PlayerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Amount" class="control-label"></label>
				<input asp-for="AdminDto.Amount" class="form-control" />
				<span asp-validation-for="AdminDto.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Currency" class="control-label"></label>
				<select asp-for="AdminDto.Currency" class="form-control" asp-items="Model.CurrencyList"></select>
				<span asp-validation-for="AdminDto.Currency" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.ConvertedEuroCentsReceived" class="control-label"></label>
				<input asp-for="AdminDto.ConvertedEuroCentsReceived" class="form-control" />
				<span asp-validation-for="AdminDto.ConvertedEuroCentsReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.DateReceived" class="control-label"></label>
				<input asp-for="AdminDto.DateReceived" class="form-control" />
				<span asp-validation-for="AdminDto.DateReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Note" class="control-label"></label>
				<input asp-for="AdminDto.Note" class="form-control" />
				<span asp-validation-for="AdminDto.Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="AdminDto.IsRefunded" /> @Html.DisplayNameFor(model => model.AdminDto.IsRefunded)
					</label>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' asp-append-version="true" />
}
