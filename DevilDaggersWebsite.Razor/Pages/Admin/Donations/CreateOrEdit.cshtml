@page
@using DevilDaggersWebsite.Razor.PageModels
@using DevilDaggersWebsite.Entities
@model AdminEntityCreateOrEditPageModel<Donation>

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Donation</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (Model.IsEditing)
			{
				<input type="hidden" asp-for="Entity.Id" />
			}
			<div class="form-group">
				<label asp-for="Entity.PlayerId" class="control-label"></label>
				<select asp-for="Entity.PlayerId" class="form-control" asp-items="Model.PlayerList"></select>
			</div>
			<div class="form-group">
				<label asp-for="Entity.Amount" class="control-label"></label>
				<input asp-for="Entity.Amount" class="form-control" />
				<span asp-validation-for="Entity.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Entity.Currency" class="control-label"></label>
				<select asp-for="Entity.Currency" class="form-control" asp-items="Model.CurrencyList"></select>
				<span asp-validation-for="Entity.Currency" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Entity.ConvertedEuroCentsReceived" class="control-label"></label>
				<input asp-for="Entity.ConvertedEuroCentsReceived" class="form-control" />
				<span asp-validation-for="Entity.ConvertedEuroCentsReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Entity.DateReceived" class="control-label"></label>
				<input asp-for="Entity.DateReceived" class="form-control" />
				<span asp-validation-for="Entity.DateReceived" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Entity.Note" class="control-label"></label>
				<input asp-for="Entity.Note" class="form-control" />
				<span asp-validation-for="Entity.Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="Entity.IsRefunded" /> @Html.DisplayNameFor(model => model.Entity.IsRefunded)
					</label>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
