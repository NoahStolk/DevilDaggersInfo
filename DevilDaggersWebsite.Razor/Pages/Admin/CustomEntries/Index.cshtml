				<a asp-route-sortMemberName="LevelUpTime2">@Html.DisplayNameFor(model => model.CustomEntries[0].LevelUpTime2)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="LevelUpTime3">@Html.DisplayNameFor(model => model.CustomEntries[0].LevelUpTime3)</a>
