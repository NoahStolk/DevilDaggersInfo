			<th>
				<a asp-route-sortMemberName="PlayerId">@Html.DisplayNameFor(model => model.CustomEntries[0].PlayerId)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="Time">@Html.DisplayNameFor(model => model.CustomEntries[0].Time)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="GemsCollected">@Html.DisplayNameFor(model => model.CustomEntries[0].GemsCollected)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="EnemiesKilled">@Html.DisplayNameFor(model => model.CustomEntries[0].EnemiesKilled)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="DeathType">@Html.DisplayNameFor(model => model.CustomEntries[0].DeathType)</a>
