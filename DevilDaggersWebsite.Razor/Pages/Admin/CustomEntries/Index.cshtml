			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.CustomEntries)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CustomLeaderboard.SpawnsetFile.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PlayerId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Time)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.GemsCollected)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EnemiesKilled)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DeathType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DaggersHit)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DaggersFired)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EnemiesAlive)
