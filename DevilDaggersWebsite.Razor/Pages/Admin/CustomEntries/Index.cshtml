			<th>
				<a asp-route-sortMemberName="DaggersFired">@Html.DisplayNameFor(model => model.CustomEntries[0].DaggersFired)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="EnemiesAlive">@Html.DisplayNameFor(model => model.CustomEntries[0].EnemiesAlive)</a>
