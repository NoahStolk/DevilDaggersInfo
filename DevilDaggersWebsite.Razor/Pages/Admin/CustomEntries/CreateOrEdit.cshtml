				<input asp-for="AdminDto.EnemiesAlive" class="form-control" />
				<span asp-validation-for="AdminDto.EnemiesAlive" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.HomingDaggers" class="control-label"></label>
