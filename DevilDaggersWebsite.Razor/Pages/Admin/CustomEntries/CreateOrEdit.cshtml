@page
@using DevilDaggersWebsite.Dto.Admin
@using DevilDaggersWebsite.Entities
@using DevilDaggersWebsite.Razor.PageModels
@model AdminEntityCreateOrEditPageModel<CustomEntry, AdminCustomEntry>

@{
	ViewData["Title"] = Model.IsEditing ? "Edit" : "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>CustomEntry</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
