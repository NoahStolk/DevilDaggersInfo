					<span asp-validation-for="AdminDto.PlayerId" class="text-danger"></span>
				</div>
			}
			<div class="form-group">
				<label asp-for="AdminDto.Time" class="control-label"></label>
				<input asp-for="AdminDto.Time" class="form-control" />
				<span asp-validation-for="AdminDto.Time" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.GemsCollected" class="control-label"></label>
				<input asp-for="AdminDto.GemsCollected" class="form-control" />
				<span asp-validation-for="AdminDto.GemsCollected" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.EnemiesKilled" class="control-label"></label>
