@page
@using DevilDaggersWebsite.Dto.Admin
@using DevilDaggersWebsite.Entities
@using DevilDaggersWebsite.Razor.PageModels
@model AdminEntityCreateOrEditPageModel<Player, AdminPlayer>

@{
	ViewData["Title"] = Model.IsEditing ? "Edit" : "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Player</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (!Model.IsEditing)
			{
				@*Cannot edit Player.Id since it is used as the primary key.*@
				<div class="form-group">
					<label asp-for="AdminDto.Id" class="control-label"></label>
					<input asp-for="AdminDto.Id" class="form-control" />
					<span asp-validation-for="AdminDto.Id" class="text-danger"></span>
				</div>
			}
			<div class="form-group">
				<label asp-for="AdminDto.PlayerName" class="control-label"></label>
				<input asp-for="AdminDto.PlayerName" class="form-control" />
				<span asp-validation-for="AdminDto.PlayerName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="AdminDto.IsAnonymous" /> @Html.DisplayNameFor(model => model.AdminDto.IsAnonymous)
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.CountryCode" class="control-label"></label>
				<input asp-for="AdminDto.CountryCode" class="form-control" />
				<span asp-validation-for="AdminDto.CountryCode" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Dpi" class="control-label"></label>
				<input asp-for="AdminDto.Dpi" class="form-control" />
				<span asp-validation-for="AdminDto.Dpi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.InGameSens" class="control-label"></label>
				<input asp-for="AdminDto.InGameSens" class="form-control" />
				<span asp-validation-for="AdminDto.InGameSens" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Fov" class="control-label"></label>
				<input asp-for="AdminDto.Fov" class="form-control" />
				<span asp-validation-for="AdminDto.Fov" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.RightHanded" class="control-label"></label>
				<input asp-for="AdminDto.RightHanded" class="form-control" />
				<span asp-validation-for="AdminDto.RightHanded" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.FlashEnabled" class="control-label"></label>
				<input asp-for="AdminDto.FlashEnabled" class="form-control" />
				<span asp-validation-for="AdminDto.FlashEnabled" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Gamma" class="control-label"></label>
				<input asp-for="AdminDto.Gamma" class="form-control" />
				<span asp-validation-for="AdminDto.Gamma" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="AdminDto.IsBanned" /> @Html.DisplayNameFor(model => model.AdminDto.IsBanned)
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.BanDescription" class="control-label"></label>
				<input asp-for="AdminDto.BanDescription" class="form-control" />
				<span asp-validation-for="AdminDto.BanDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.BanResponsibleId" class="control-label"></label>
				<input asp-for="AdminDto.BanResponsibleId" class="form-control" />
				<span asp-validation-for="AdminDto.BanResponsibleId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.UsesLegacyAudio" class="control-label"></label>
				<input asp-for="AdminDto.UsesLegacyAudio" class="form-control" />
				<span asp-validation-for="AdminDto.UsesLegacyAudio" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.IsBannedFromDdcl" class="control-label"></label>
				<input asp-for="AdminDto.IsBannedFromDdcl" class="form-control" />
				<span asp-validation-for="AdminDto.IsBannedFromDdcl" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">AssetMods (CTRL+click for multiple)</label>
				<select asp-for="AdminDto.AssetModIds" class="admin-select form-control" asp-items="Model.AssetModList" style="height: 640px;"></select>
				<span asp-validation-for="AdminDto.AssetModIds" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Titles (CTRL+click for multiple)</label>
				<select asp-for="AdminDto.TitleIds" class="admin-select form-control" asp-items="Model.TitleList"></select>
				<span asp-validation-for="AdminDto.TitleIds" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' asp-append-version="true" />
}
