@page
@using DevilDaggersWebsite.Dto.CustomLeaderboards
@using DevilDaggersWebsite.Entities
@using DevilDaggersWebsite.Razor.PageModels
@model AdminEntityCreateOrEditPageModel<CustomLeaderboard, AddCustomLeaderboard>

@{
	ViewData["Title"] = Model.IsEditing ? "Edit" : "Create";
}

<h1>@ViewData["Title"] CustomLeaderboard</h1>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="AdminDto.SpawnsetFileId" class="control-label"></label>
				<select asp-for="AdminDto.SpawnsetFileId" class="form-control" asp-items="Model.SpawnsetFileList"></select>
				<span asp-validation-for="AdminDto.SpawnsetFileId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.Category" class="control-label"></label>
				<select asp-for="AdminDto.Category" class="form-control" asp-items="Model.CategoryList"></select>
				<span asp-validation-for="AdminDto.Category" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.TimeBronze" class="control-label"></label>
				<input asp-for="AdminDto.TimeBronze" class="form-control" />
				<span asp-validation-for="AdminDto.TimeBronze" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.TimeSilver" class="control-label"></label>
				<input asp-for="AdminDto.TimeSilver" class="form-control" />
				<span asp-validation-for="AdminDto.TimeSilver" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.TimeGolden" class="control-label"></label>
				<input asp-for="AdminDto.TimeGolden" class="form-control" />
				<span asp-validation-for="AdminDto.TimeGolden" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.TimeDevil" class="control-label"></label>
				<input asp-for="AdminDto.TimeDevil" class="form-control" />
				<span asp-validation-for="AdminDto.TimeDevil" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdminDto.TimeLeviathan" class="control-label"></label>
				<input asp-for="AdminDto.TimeLeviathan" class="form-control" />
				<span asp-validation-for="AdminDto.TimeLeviathan" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="AdminDto.IsArchived" /> @Html.DisplayNameFor(model => model.AdminDto.IsArchived)
					</label>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' asp-append-version="true" />
}
