@page
@using DevilDaggersWebsite.Dto.Admin
@using DevilDaggersWebsite.Entities
@using DevilDaggersWebsite.Razor.PageModels
@model AdminEntityDeletePageModel<CustomLeaderboard, AdminCustomLeaderboard>

@{
	ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="delete-warning">
	ONLY delete a custom leaderboard if the associated spawnset is also being deleted.<br /><br />
	In all other cases, edit the custom leaderboard and set the IsArchived field to true instead. Deleting a custom leaderboard also permanently deletes all of its scores.
</div>
<div>
	<dl class="dl-horizontal">
		@foreach (var pi in Model.EntityDisplayProperties)
		{
			<dt>
				@pi.Name
			</dt>
			<dd>
				@pi.GetValue(Model.Entity)
			</dd>
		}
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Entity.Id" />
		<input type="submit" value="Delete" class="btn btn-default" /> |
		<a asp-page="./Index">Back to List</a>
	</form>
</div>

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' asp-append-version="true" />
}
