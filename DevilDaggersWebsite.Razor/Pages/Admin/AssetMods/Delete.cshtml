@page
@using DevilDaggersWebsite.Razor.PageModels
@using DevilDaggersWebsite.Dto.Admin
@using DevilDaggersWebsite.Entities
@model AdminEntityDeletePageModel<AssetMod, AdminAssetMod>

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h2>Are you sure you want to delete this?</h2>
<div class="delete-warning">
	I prefer to not delete mods at all. If the author wants it removed, edit the mod and set the IsHidden field to true instead.<br /><br />
	In case the mod contains offensive material it's fine to just permanently delete it. Don't forget to delete the actual file as well (if any).
</div>
<div>
	<dl class="dl-horizontal">
		@foreach (var pi in Model.EntityDisplayProperties)
		{
			<dt>
				@pi.Name
			</dt>
			<dd>
				@pi.GetValue(Model.Entity)
			</dd>
		}
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Entity.Id" />
		<input type="submit" value="Delete" class="btn btn-default" /> |
		<a asp-page="./Index">Back to List</a>
	</form>
</div>

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' asp-append-version="true" />
}
