@page
@model DevilDaggersWebsite.Razor.Pages.Admin.AssetMods.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>AssetMod</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="AssetMod.Id" />
			<div class="form-group">
				<label asp-for="AssetMod.AssetModTypes" class="control-label"></label>
				<input asp-for="AssetMod.AssetModTypes" class="form-control" />
				<span asp-validation-for="AssetMod.AssetModTypes" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AssetMod.AssetModFileContents" class="control-label"></label>
				<input asp-for="AssetMod.AssetModFileContents" class="form-control" />
				<span asp-validation-for="AssetMod.AssetModFileContents" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AssetMod.Name" class="control-label"></label>
				<input asp-for="AssetMod.Name" class="form-control" />
				<span asp-validation-for="AssetMod.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label>Authors</label>
				<select asp-for="AuthorIds" class="admin-select form-control" asp-items="Model.AuthorSelectList"></select>
				<span asp-validation-for="AuthorIds" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AssetMod.Url" class="control-label"></label>
				<input asp-for="AssetMod.Url" class="form-control" />
				<span asp-validation-for="AssetMod.Url" class="text-danger"></span>
			</div>
			<div class="form-group hidden">
				@*Hidden hack to trick ModelState*@
				<label asp-for="AssetMod.PlayerAssetMods" class="control-label"></label>
				<input asp-for="AssetMod.PlayerAssetMods" class="form-control" />
				<span asp-validation-for="AssetMod.PlayerAssetMods" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}