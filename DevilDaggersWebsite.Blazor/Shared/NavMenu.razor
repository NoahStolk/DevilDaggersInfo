<div class="top-row pl-4 navbar navbar-dark">
	<a class="navbar-brand" href="">Devil Daggers Info</a>
	<button class="navbar-toggler" @onclick="ToggleNavMenu">
		<span class="navbar-toggler-icon"></span>
	</button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<ul class="nav flex-column">
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="" Match="NavLinkMatch.All">
				<span class="oi oi-home" aria-hidden="true"></span> Home
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/Leaderboard" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> Leaderboard
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/LeaderboardStatistics" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> Leaderboard Statistics
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/LeaderboardHistory" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> Leaderboard History
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/WorldRecordProgression" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> WR Progression
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/CustomLeaderboards" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> Custom Leaderboards
			</NavLink>
		</li>
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="/swagger/index.html" Match="NavLinkMatch.All">
				<span class="oi oi-badge" aria-hidden="true"></span> API
			</NavLink>
		</li>
	</ul>
</div>

@code {
	private bool collapseNavMenu = true;

	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
