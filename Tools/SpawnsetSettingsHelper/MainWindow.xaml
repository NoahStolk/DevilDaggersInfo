<Window x:Class="SpawnsetSettingsHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SpawnsetSettingsHelper" Height="912" Width="1920" KeyDown="Window_KeyDown">
	<StackPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Reload" Click="Reload_Click" />
				<MenuItem Header="Save" Click="Save_Click" />
			</MenuItem>
		</Menu>
		<Grid Margin="0,0,18,0" Background="DarkGray">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition />
				<ColumnDefinition Width="15*" />
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Text="FileName" />
			<TextBlock Grid.Column="1" Text="MaxWaves" />
			<TextBlock Grid.Column="2" Text="Description" />
			<TextBlock Grid.Column="3" Text="LastUpdated" />
		</Grid>
		<ScrollViewer Height="840">
			<StackPanel Name="Spawnsets" />
		</ScrollViewer>
	</StackPanel>
</Window>