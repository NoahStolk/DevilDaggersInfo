<UserControl x:Class="SpawnsetSettingsHelper.SpawnsetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="800">
	<Grid x:Name="Main">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition />
			<ColumnDefinition Width="15*" />
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0" Text="{Binding Key}" />
		<TextBox Grid.Column="1" Text="{Binding Value.MaxWaves, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		<TextBox Grid.Column="2" Text="{Binding Value.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" />
		<TextBox Grid.Column="3" Text="{Binding Value.LastUpdated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
	</Grid>
</UserControl>