<li class="p-3 text-xl">
	<div class="cursor-pointer select-none" @onclick="() => _collapse = !_collapse">
		<Icon Type="@IconType" Text="@Text" />
	</div>
	@if (!_collapse)
	{
		<ul class="pl-1 pt-3">
			@ChildContent
		</ul>
	}
</li>

@code
{
	private bool _collapse = true;

	[Parameter] public RenderFragment ChildContent { get; set; } = null!;
	[Parameter] public string IconType { get; set; } = null!;
	[Parameter] public string Text { get; set; } = null!;
}
