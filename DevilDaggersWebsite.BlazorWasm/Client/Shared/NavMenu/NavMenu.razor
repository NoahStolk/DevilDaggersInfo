<div class="p-4">
	<a href="" class="font-goethe text-3xl">DevilDaggers.Info</a>
	<button class="sm:hidden" @onclick="() => _showNavMenu = !_showNavMenu">
		<span class="oi oi-menu" aria-hidden="true"></span>
	</button>
</div>

<div class="@NavMenuCssClass pb-4">
	<ul>
		<NavItem Href="" CssClass="text-xl" IconType="home" Text="Home" Match="NavLinkMatch.All" />
		<NavDropdown NavMenu="this" Text="Leaderboard">
			<NavItem Href="leaderboard" CssClass="text-lg" IconType="clock" Text="Leaderboard" />
			<NavItem Href="leaderboard-history" CssClass="text-lg" IconType="book" Text="History" />
			<NavItem Href="player-settings" CssClass="text-lg" IconType="cog" Text="Player Settings" />
			<NavItem Href="leaderboard-statistics" CssClass="text-lg" IconType="bar-chart" Text="Statistics" />
			<NavItem Href="world-record-progression" CssClass="text-lg" IconType="star" Text="World Record Progression" />
		</NavDropdown>
		<NavDropdown NavMenu="this" Text="Custom">
			<NavItem Href="spawnsets" CssClass="text-lg" IconType="grid-three-up" Text="Spawnsets" />
			<NavItem Href="custom-leaderboards" CssClass="text-lg" IconType="clock" Text="Custom Leaderboards" />
			<NavItem Href="mods" CssClass="text-lg" IconType="brush" Text="Mods" />
		</NavDropdown>
		<NavDropdown NavMenu="this" Text="Tools">
			<NavItem Href="tools/survival-editor" CssClass="text-lg" IconType="grid-three-up" Text="Survival Editor" />
			<NavItem Href="tools/custom-leaderboards" CssClass="text-lg" IconType="clock" Text="Custom Leaderboards" />
			<NavItem Href="tools/asset-editor" CssClass="text-lg" IconType="brush" Text="Asset Editor" />
		</NavDropdown>
		<NavDropdown NavMenu="this" Text="Wiki">
			<NavItem Href="wiki/spawns" CssClass="text-lg" IconType="fire" Text="Spawns" />
			<NavItem Href="wiki/upgrades" CssClass="text-lg" IconType="bolt" Text="Upgrades" />
			<NavItem Href="wiki/enemies" CssClass="text-lg" IconType="eye" Text="Enemies" />
			<NavItem Href="wiki/daggers" CssClass="text-lg" IconType="arrow-bottom" Text="Daggers" />
		</NavDropdown>
		<NavDropdown NavMenu="this" Text="Guides">
			<NavItem Href="guides/survival-editor" CssClass="text-lg" IconType="grid-three-up" Text="Survival Editor" />
			<NavItem Href="guides/asset-editor" CssClass="text-lg" IconType="brush" Text="Asset Editor" />
		</NavDropdown>
		<NavDropdown NavMenu="this" Text="Admin">
			<NavItem Href="admin/custom-entries" CssClass="text-lg" IconType="ellipses" Text="Custom Entries" />
			<NavItem Href="admin/custom-leaderboards" CssClass="text-lg" IconType="list" Text="Custom Leaderboards" />
			<NavItem Href="admin/donations" CssClass="text-lg" IconType="heart" Text="Donations" />
			<NavItem Href="admin/mods" CssClass="text-lg" IconType="brush" Text="Mods" />
			<NavItem Href="admin/players" CssClass="text-lg" IconType="people" Text="Players" />
			<NavItem Href="admin/spawnsets" CssClass="text-lg" IconType="grid-three-up" Text="Spawnsets" />
			<NavItem Href="admin/titles" CssClass="text-lg" IconType="badge" Text="Titles" />
			<NavItem Href="admin/users" CssClass="text-lg" IconType="person" Text="Users" />
		</NavDropdown>
		<NavItem Href="donations" CssClass="text-xl" IconType="heart" Text="Donations" />
		<NavItem Href="swagger/index.html" CssClass="text-xl" IconType="link-intact" Text="API" />
	</ul>
</div>

@code
{
	private bool _showNavMenu = false;

	private string? NavMenuCssClass => _showNavMenu ? null : "hidden sm:block";

	public List<NavDropdown> NavDropdowns { get; } = new();

	public void ShowSubMenu(NavDropdown navDropdown)
	{
		foreach (NavDropdown nd in NavDropdowns)
			nd.ShowList = navDropdown == nd;
	}
}
