@page
@model DevilDaggersWebsite.Pages.AdminModel
@inject CoreBase.Services.ICommonObjects CommonObjects
@{
	ViewData["Title"] = "Admin";
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<main role="main" class="text-center">
	<div class="row">
		<div class="col-lg-4 col-xs-12">
			<div>Bans</div>
			<textarea>@Model.BansFileContents</textarea>
		</div>
		<div class="col-lg-4 col-xs-12">
			<div>Donations</div>
			<textarea>@Model.DonatorsFileContents</textarea>
		</div>
		<div class="col-lg-4 col-xs-12">
			<div>Flags</div>
			<textarea>@Model.FlagsFileContents</textarea>
		</div>
	</div>
	<p>
		<button class="btn btn-default">Save</button>
	</p>
</main>