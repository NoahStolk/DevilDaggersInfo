@page
@model DevilDaggersWebsite.Pages.Admin.CustomLeaderboardCategories.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				<a asp-route-sortMemberName="Name">@Html.DisplayNameFor(model => model.CustomLeaderboardCategories[0].Name)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="SortingPropertyName">@Html.DisplayNameFor(model => model.CustomLeaderboardCategories[0].SortingPropertyName)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="Ascending">@Html.DisplayNameFor(model => model.CustomLeaderboardCategories[0].Ascending)</a>
			</th>
			<th>
				<a asp-route-sortMemberName="LayoutPartialName">@Html.DisplayNameFor(model => model.CustomLeaderboardCategories[0].LayoutPartialName)</a>
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.CustomLeaderboardCategories)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SortingPropertyName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ascending)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LayoutPartialName)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>