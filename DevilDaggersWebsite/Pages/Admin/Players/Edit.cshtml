@page
@model DevilDaggersWebsite.Pages.Admin.Players.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Player</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Player.Id" />
			<div class="form-group">
				<label asp-for="Player.Id" class="control-label"></label>
				<input asp-for="Player.Id" class="form-control" />
				<span asp-validation-for="Player.Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.Username" class="control-label"></label>
				<input asp-for="Player.Username" class="form-control" />
				<span asp-validation-for="Player.Username" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="Player.IsAnonymous" /> @Html.DisplayNameFor(model => model.Player.IsAnonymous)
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Player.CountryCode" class="control-label"></label>
				<input asp-for="Player.CountryCode" class="form-control" />
				<span asp-validation-for="Player.CountryCode" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.Dpi" class="control-label"></label>
				<input asp-for="Player.Dpi" class="form-control" />
				<span asp-validation-for="Player.Dpi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.InGameSens" class="control-label"></label>
				<input asp-for="Player.InGameSens" class="form-control" />
				<span asp-validation-for="Player.InGameSens" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.Fov" class="control-label"></label>
				<input asp-for="Player.Fov" class="form-control" />
				<span asp-validation-for="Player.Fov" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.RightHanded" class="control-label"></label>
				<input asp-for="Player.RightHanded" class="form-control" />
				<span asp-validation-for="Player.RightHanded" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.FlashEnabled" class="control-label"></label>
				<input asp-for="Player.FlashEnabled" class="form-control" />
				<span asp-validation-for="Player.FlashEnabled" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.Gamma" class="control-label"></label>
				<input asp-for="Player.Gamma" class="form-control" />
				<span asp-validation-for="Player.Gamma" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="Player.IsBanned" /> @Html.DisplayNameFor(model => model.Player.IsBanned)
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Player.BanDescription" class="control-label"></label>
				<input asp-for="Player.BanDescription" class="form-control" />
				<span asp-validation-for="Player.BanDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player.BanResponsibleId" class="control-label"></label>
				<input asp-for="Player.BanResponsibleId" class="form-control" />
				<span asp-validation-for="Player.BanResponsibleId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}