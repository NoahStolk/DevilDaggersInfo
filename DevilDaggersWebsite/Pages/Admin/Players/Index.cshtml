				@Html.DisplayNameFor(model => model.Player[0].InGameSens)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].Fov)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].RightHanded)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].FlashEnabled)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].Gamma)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].IsBanned)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].BanDescription)
