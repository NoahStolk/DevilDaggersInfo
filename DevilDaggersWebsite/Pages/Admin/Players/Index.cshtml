<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].Username)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].IsAnonymous)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].CountryCode)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Player[0].Dpi)
			</th>
