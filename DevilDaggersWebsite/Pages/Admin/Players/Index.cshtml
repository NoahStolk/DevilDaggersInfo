				@Html.DisplayNameFor(model => model.Player[0].BanResponsibleId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Player)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Username)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsAnonymous)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CountryCode)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Dpi)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.InGameSens)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fov)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RightHanded)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FlashEnabled)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Gamma)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsBanned)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BanDescription)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BanResponsibleId)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>