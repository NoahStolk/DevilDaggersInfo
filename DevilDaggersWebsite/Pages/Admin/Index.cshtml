@page
@model DevilDaggersWebsite.Pages.Admin.IndexModel
@inject CoreBase.Services.ICommonObjects CommonObjects
@{
	ViewData["Title"] = "Admin";
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<main role="main" class="text-center">
	@using (Html.BeginForm(FormMethod.Post))
	{
		<fieldset>
			<div class="row">
				<div class="col-lg-4 col-xs-12">
					<h2>Bans</h2>
					<p>ID, Description, IDResponsible (<a asp-page="/Admin/BanInfo" asp-route-password="@Model.Password">Ban Info page</a> (takes a while to load))</p>
					<textarea asp-for="BansFileContents">@Model.BansFileContents</textarea>
				</div>
				<div class="col-lg-4 col-xs-12">
					<h2>Donators</h2>
					<p>ID, Username, Amount, Currency</p>
					<textarea asp-for="DonatorsFileContents">@Model.DonatorsFileContents</textarea>
				</div>
				<div class="col-lg-4 col-xs-12">
					<h2>Flags</h2>
					<p>ID, CountryCode</p>
					<textarea asp-for="FlagsFileContents">@Model.FlagsFileContents</textarea>
				</div>
				<div class="col-lg-4 col-xs-12">
					<h2>Player settings</h2>
					<p>ID, DPI, Sens, FOV, RightHanded, FlashEnabled</p>
					<textarea asp-for="SettingsFileContents">@Model.SettingsFileContents</textarea>
				</div>
				<div class="col-lg-4 col-xs-12">
					<h2>User titles</h2>
					<p>ID, Titles (multiple titles are separated by commas, e.g. Site admin,Discord mod)</p>
					<textarea asp-for="TitlesFileContents">@Model.TitlesFileContents</textarea>
				</div>
			</div>
			<div class="row">
				<input asp-for="Password" type="hidden" value="@Model.Password" />
				<input type="submit" id="save" class="btn btn-default" value="Save" />
			</div>
		</fieldset>
	}
</main>

@section Styles {
	<link rel='stylesheet' href='~/styles/admin.css' />
}