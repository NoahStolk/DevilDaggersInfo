@page
@model DevilDaggersWebsite.Pages.Wiki.SpawnsModel
@using DevilDaggersWebsite.Utils
@{
	ViewData["Title"] = "Spawns";
}

<header>
	<h1>@ViewData["Title"]</h1>
</header>

<form method="get">
	<select class="select form-control" asp-for="gameVersion" asp-items="Model.GameVersions" onchange="this.form.submit()"></select>
</form>

<main role="main" class="text-center">
	<p>
		These are the official spawn times for Devil Daggers @Model.gameVersion.
	</p>
	<p>
		@RazorUtils.GetLayout($"Note that {Model.EmergeEnemies} emerge around 3 seconds later than their actual spawn time.", Model.gameVersionObject)
	</p>
	<p>
		Visit <a asp-page="/Wiki/SpawnsExtended">this page</a> for extended spawns information.
	</p>

	@await Html.PartialAsync("Partials/_SpawnsPartial", Model.SpawnsetPath)
</main>

@section Styles {
	<link rel='stylesheet' href='~/styles/spawns.css' />
}